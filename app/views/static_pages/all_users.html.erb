<% provide(:title, 'Users') %>

<div class="container home" id="home">
	<h3 class="container center">User List </h3>
  <div class="pull-left">
    <p class="underline">Search users</p>
    <%= render 'shared/user_search'%>
  </div>
  <div class="container pull-left">
    <% if @users %>
    <div class="container pull-left">
    </div>
    <div class="container">
         <%= @users.each_with_index do |user, index| %>
         <% break if @users.size - 1 == index %>
        <ol class="articles">
            <% if !user.is_admin%>
           <li><%= link_to user.name, user %></li>
           <%end%>
        </ol>
<%end%>
      </div>   
    <% end %>
  </div>
</div>
</div>