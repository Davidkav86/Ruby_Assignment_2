<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
	<%= f.label :title %>
	<%= f.text_field :title, placeholder: "Title" %>

	<%= f.label :genre %>
	<%= f.text_field :genre, placeholder: "Genre" %>

	<%= f.label "Image Tag" %>
	<%= f.text_field :picture, placeholder: "Image Tag" %>

	<%= f.label :content %>
    <%= f.text_area :content, size: "60x30", placeholder: "Create a new Article..."%>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>