<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="header">
    <div class="container">
      <%= link_to "Sports-Shack", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right" id="navText">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "All Articles", all_articles_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", all_users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <% if @user%>
                <li><%= link_to "Settings", edit_user_path(@user) %></li>
                <%end%>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Join now <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign in", signin_path %></li>
                <li><%= link_to "Sign up", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
  </div>
</header>