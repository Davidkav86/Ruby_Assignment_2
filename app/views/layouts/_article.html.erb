<body id="article">
  <div class="container title">
  <div class="container">
    <div class="container">
    <div class="pull-right span4">
    <%= image_tag("#{@article.picture}", :class => "image") %>
  </div>
    <div class=" pull-left span7">
      <h1>
       <%= @article.title %>
      </h1>
    </div>
  </div>
    <span class=" pull-right">
    Genre: <%= @article.genre %>
    </span>
    <div class="container pull-left">
      Posted by: <%= @user.name%>
      <div class="timestamp">
      Posted at: <%= @article.created_at %>.
    </div>
    </div>
    <div class="form-group">
    </div>
    <textarea class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 400px;">
      <%= @article.content %>
    </textarea>
  </div>
  <% if current_user.id == @article.user_id %>
  <div class="btn-group icons">
    <button class="btn"><%= link_to "Remove Article", @article, method: :delete,
                                     data: { confirm: "Are you sure you want to delete this article?" },
                                     title: @article.title %></button>                            
    <button class="btn"><%= link_to "Edit Article", edit_article_path(@article) %></button>
    </div>                                 
  <% end %>
</div>

</body>