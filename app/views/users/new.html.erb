<% provide(:title, 'Sign up') %>
<div class="container">
<div class="container pull-left signup">
  <div class"container">
<h1>Sign up</h1>
</div>

<div class="pull-left">
  <div class="pull-left">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Lets get started!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
</div>
