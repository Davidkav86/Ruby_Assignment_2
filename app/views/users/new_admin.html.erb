<% provide(:title, 'Create Administrator Account') %>
<h1>Create Administrator Account</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@new_user) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create Administrator Account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

<ul class="nav pull-right">
	<li><%= link_to "Admin Home Page", current_user %></li>
</ul>