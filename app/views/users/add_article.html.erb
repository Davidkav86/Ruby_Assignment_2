<% provide(:title, "Admnistrator") %>

<h1>Article Management Page</h1>

<div class="span8 pull-right">
    <% if @user.articles.any? %>
      <h3>Articles (<%= @user.articles.count %>)</h3>
      <ol class="articles">
        <%= render @articles %>
      </ol>
      <%= will_paginate @articles %>
    <% end %>
  </div>
<p>
	Manage Articles
	<div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/article_form' %>
      </section>
    </aside>
  </div>
</p>
<p>
  <ul class="nav pull-left">
	<li><%= link_to "Admin Home Page", current_user %></li>
  </ul>
</p>